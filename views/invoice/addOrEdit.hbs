<h3>Input Your Expenses</h3>


<div class="form-main">
<form action="/invoice" method="post">
    
    <div class="form-group col-25">
        <label>Email</label>
        <input required type="text" name="mail" placeholder=" " value="{{invoice.mail}}">
    </div>
    <div class="form-group col-25">
        <label>Hours of work:</label>
        <input required type="text" name="workHrs" placeholder=" " value="{{invoice.wrkHrs}}"><label>(500 Rs/hr)</label>
    </div>


    <div class="form-group">
        <label>Work Related:</label>
        <input required type="text" name="workExp" placeholder=" " value="{{invoice.wrkExp}}"> <label>(Transportation/House Rent/Both)</label>
    </div>


    <div class="form-group">
        <label>Materials:</label>
        <input required type="text" name="materials" placeholder=" " value="{{invoice.mat}}"> <label>(Laptop/Desktop)</label>
    </div>
    <div class="form-group">
        <label>Labor:</label>
        <input required type="text" name="labour" placeholder=" " value="{{invoice.lab}}"> <label>(Offline/Online)</label>
    </div>
    <div class="form-group">
        <label>Note:</label>
        <input required  style="width:200px; height:50px;"  type="text" name="note" placeholder=" " value="{{invoice.nt}}"> <label>(Information Regarding Payment Methods and Details)</label>
    </div>

    <button type="submit"  href="/invoice/list" class="btn btn-success">Submit</button>
</form>
</div>
<a href="/invoice/list" class="btn btn-primary">View tasks</a>